<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
     "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
     "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	
	<definition name="layout_user" template="/WEB-INF/include/layout.jsp">
		<put-attribute name="menu" value="" />
		<put-attribute name="body" value="" />
	</definition>
	
	<!-- definition 은 단지 뷰의 이름을 뿐, 꼭 어떤 파일의 경로명과 일치할 필요는 없다.
		컨트롤러의 액션 메소드에서 이 이름을 리턴해야 한다. -->
		
	<definition name="embed/*" template="/WEB-INF/include/blank_layout.jsp">
		<put-attribute name="body" value="/WEB-INF/views/embed/{1}.jsp" />
	</definition>
	
	<definition name="*/*" extends="layout_user">
		<put-attribute name="menu" value="/WEB-INF/include/menu.jsp" />
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>

</tiles-definitions>
